<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="./css/home/login.css" />
    <script src="./js/home/login.js" defer></script>
    <title>Login</title>
  </head>

  <body>
    <div class="login-box">
      <h2>Sign Up</h2>
      <form>
        <div class="user-box">
          <input id="name" type="text" name="" required="" />
          <label>Name</label>
        </div>
        <div class="user-box">
          <input id="id" type="text" name="" required="" />
          <label>Username</label>
        </div>
        <div class="user-box">
          <input id="password" type="text" name="" required="" />
          <label>Password</label>
        </div>
        <div class="user-box">
          <input id="confirm-password" type="password" name="" required="" />
          <label>Confirm Password</label>
        </div>
        <a href="#">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Submit
        </a>
        <span><a id="sign-up" href="/login">Already registered?</a></span>
      </form>
    </div>
  </body>
</html>
